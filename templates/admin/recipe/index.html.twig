{% extends 'admin/base.html.twig' %}

{% block title %}Hello DescriptionController!
{% endblock %}

{% block body %}
	<main>
		<h1>Recette</h1>
		<table class='table tble-striped'>
			<tr>
				<th>Nom</th>
				<th>Temps</th>
				<th>Difficult√©</th>
				<th>Etape</th>
				<th>Prix</th>
				<th>Modifier</th>
				<th>Supprimer</th>

			</tr>
			{% for formulaire in formulaire_description %}
				<tr>
					<td><a href={{path('admin_recipe_show',{id:formulaire.id})}}>{{formulaire.name}}</a></td>
					<td>{{formulaire.time}}</td>
					<td>{{formulaire.difficulties}}</td>
					<td>{{formulaire.text}}</td>
					<td>{{formulaire.prix}}</td>
					<td>
						<a href={{path('admin_recipe_update',{'slug':formulaire.slug})}} class='btn btn-primary'>Modifier</a>
					</td>
					<td><form action={{path('admin_recipe_delete',{'id':formulaire.id} )}}method='POST'></form>
						<input type="hidden" name='_method' value='DELETE'>
						<button type='submit' class='btn btn-danger'>Supprimer</button>
						</td>
				</tr>
			{% endfor %}
		</table>
	</main>
{% endblock %}
